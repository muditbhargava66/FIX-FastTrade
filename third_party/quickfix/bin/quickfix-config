#!/bin/bash

PREFIX=/usr/local
VERSION=1.15.1

usage() {
    cat <<EOF
Usage: quickfix-config [OPTIONS]

Options:
  --prefix            Output the QuickFIX installation prefix
  --version           Output the QuickFIX version
  --cflags            Output the required flags for the C++ compiler
  --libs              Output the required libraries for linking
  --help              Display this help message
EOF
}

if [ $# -eq 0 ]; then
    usage
    exit 1
fi

while [ $# -gt 0 ]; do
    case "$1" in
        --prefix)
            echo $PREFIX
            ;;
        --version)
            echo $VERSION
            ;;
        --cflags)
            echo "-I$PREFIX/include/quickfix"
            ;;
        --libs)
            echo "-L$PREFIX/lib -lquickfix"
            ;;
        --help)
            usage
            exit 0
            ;;
        *)
            usage
            exit 1
            ;;
    esac
    shift
done